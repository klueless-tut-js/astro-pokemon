---
import type { Pokemon } from "../types";

export interface Props {
  pokemon: Pokemon;
}

const { pokemon } = Astro.props as Props;
const backgroundImage = `background-image: url("/images/${pokemon.name.toLowerCase()}.jpg");`
---

<div class="w-full flex border border-gray-200 rounded-md shadow-lg">
  <div
    class="m-2 h-48 lg:h-auto lg:w-24 flex-none bg-contain bg-no-repeat rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
    style={backgroundImage}
    title={pokemon.name}
  ></div>
  <div class="bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-2">
      <div class="text-gray-900 font-bold text-xl mb-2">
        {pokemon.name}
      </div>
      <p class="text-gray-700 text-base italic">
        {pokemon.type.join(", ")}
      </p>
      <div class="grid grid-cols-2">
        <p>HP: {pokemon.hp}</p>
        <p>Speed: {pokemon.speed}</p>
        <p>Attack: {pokemon.attack}</p>
        <p>Defense: {pokemon.defense}</p>
        <p>Sp. Attack: {pokemon.special_attack}</p>
        <p>Sp. Defense: {pokemon.special_defense}</p>
      </div>
    </div>
  </div>
</div>
